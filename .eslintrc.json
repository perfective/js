{
    "extends": [
        "@perfective/eslint-config"
    ],
    "parserOptions": {
        "project": "./tsconfig.lint.json"
    },
    "settings": {
        "import/resolver": {
            "typescript": {
                "directory": "tsconfig.lint.json"
            }
        },
        "jest": {
            "version": 25
        }
    },
    "rules": {
        "@typescript-eslint/prefer-readonly-parameter-types": "off"
    }
}
