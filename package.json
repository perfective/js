{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "lerna run --stream build",
        "build:clean": "lerna run --stream build:clean",
        "build:eslint": "lerna run --scope @perfective/eslint-config --stream build",
        "clean": "lerna run --stream clean",
        "lint": "npm run build:eslint && lerna run lint --no-bail --no-prefix --stream",
        "test": "lerna run --stream --no-bail --no-prefix test",
        "test:clean": "lerna run --stream test:clean",
        "test:verbose": "lerna run --stream --no-bail --no-prefix test:verbose"
    },
    "devDependencies": {
        "@angular-eslint/eslint-plugin": "^0.0.1-alpha.32",
        "@angular-eslint/eslint-plugin-template": "^0.0.1-alpha.32",
        "@angular-eslint/template-parser": "^0.0.1-alpha.32",
        "@angular/compiler": "^9.1.12",
        "@angular/core": "^9.1.12",
        "@perfective/array": "file:packages/array",
        "@perfective/error": "file:packages/error",
        "@perfective/eslint-config": "file:packages/eslint-config",
        "@perfective/eslint-config-angular": "file:packages/eslint-config-angular",
        "@perfective/fp": "file:packages/fp",
        "@perfective/identity": "file:packages/identity",
        "@perfective/match": "file:packages/match",
        "@perfective/maybe": "file:packages/maybe",
        "@perfective/object": "file:packages/object",
        "@perfective/real": "file:packages/real",
        "@perfective/string": "file:packages/string",
        "@perfective/value": "file:packages/value",
        "@types/jest": "^26.0.5",
        "@typescript-eslint/eslint-plugin": "^3.7.0",
        "@typescript-eslint/parser": "^3.7.0",
        "codelyzer": "^5.2.2",
        "eslint": "^7.5.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-deprecation": "^1.1.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^23.18.0",
        "eslint-plugin-jest-dom": "^3.1.4",
        "eslint-plugin-jest-formatting": "^2.0.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prefer-arrow": "^1.2.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-rxjs": "^0.0.2-beta.28",
        "eslint-plugin-rxjs-angular": "^0.0.1-beta.5",
        "eslint-plugin-sonarjs": "^0.5.0",
        "eslint-plugin-unicorn": "^21.0.0",
        "jest": "^26.1.0",
        "lerna": "^3.22.1",
        "ts-jest": "^26.1.3",
        "tslint": "^6.1.2",
        "typescript": "^3.9.7",
        "zone.js": "~0.10.3"
    }
